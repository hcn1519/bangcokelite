<style type="text/css">
  label.autologin {
     line-height:0;
  }
  .modal-dialog.login {
    width:400px;
  }
  
  .form-control {
    border: 1px solid #a1a6a9;
  }
  
  .modal-body {
    padding-bottom: 30px;
  }
  
  .modal_btn {
    width:100%;
    border-radius:0;
  }
  
  .modal-header, .modal-body {
    background-color:#f5f5f5;
  }
  
    
  .btn-danger2:hover, .btn-danger2.hover, .btn-danger2:focus, .btn-danger2:active, .btn-danger2.active, .open > .dropdown-toggle.btn-danger2 {
    color: #ffffff;
    background-color: #ec7063;
    border-color: #ec7063;
   }
 
  .btn-danger2 {
    background-color: transparent;
    color: #e74c3c;
    border: 1px solid #ff8773;
  }  
  hr {
    
    border: 0;
    border-top: 1px solid #aeaeae;
}
</style>

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="max-width:400px">
    <div class="modal-content">
    
      <div class="modal-header" >
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 style="text-align:center; margin-top:10px;">&nbsp&nbsp로그인</h4>
      </div>
      <div class="modal-body" >
          
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    
    <%= devise_error_messages! %>
    <div class="form-group">
      
      <%= f.text_field :login, :autofocus => true, class: 'form-control', placeholder: "이메일이나 휴대폰 번호" %>
    </div>
    <div class="form-group">
      
      <%= f.password_field :password, class: 'form-control', placeholder: "비밀번호" %>
    </div>
    <div class="row" style="margin:0">
      <div class="col-md-5 col-sm-5 col-xs-6" style="padding-left:10px">
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="padding-left: 1em;">
            <label class="autologin">
              <%= f.check_box :remember_me %> 자동 로그인
            </label>
          </div>
        <% end -%>
      </div>
      <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-4 col-sm-offset-3 col-xs-5 col-xs-offset-1" style="text-align:right; padding-right:10px; margin-top:0.3em;">
        <%- if devise_mapping.recoverable? %>
            <%= link_to '비밀번호 찾기', '#', :style=>"font-size:14px;", data: {toggle: "modal", target: "#forgot_pass"}%>
        <% end -%>
      </div>
    </div>
    
    
      <%= f.submit '로그인', :class => 'btn btn-success modal_btn' %>
    
    <!-- <div id="naver_id_login">
            
      <%#= link_to user_omniauth_authorize_path(:naver), class: 'btn modal_btn', :style=>"border:1px solid #1EC800; margin-top:10px; padding-top:0; padding-bottom:0; color:#999999; background-color:#ffffff;", target:"_blank" do %>
        
        -->
        <!--<div class="row" style="padding:0px">
          <div class="col-md-2 col-sm-2 col-xs-2" style="padding:0px">
            <img src="/images/icons/naverlogshortWhite.png" style="height:40px; margin-left:0px" />
          </div>
          <div class="col-md-10 col-sm-10 col-xs-10" style="padding:0px">
            <span style="font-size:14px">네이버 아이디로 로그인</span>
          </div>
        </div>-->
      <%# end %>
      <%= link_to user_omniauth_authorize_path(:facebook) do %>
        <div class="row" style="background-color:#3b579d; margin-top:10px; margin-left:0; margin-right:0;">
            <center>
            <div style="display:inline-block">
              <img src="/images/icons/Facebook_logo.png" style="display:inline; margin:0; max-width:40px; height:40px;"/>
            </div>
            <div style="display:inline-block">
              <span style="vertical-align:middle; color:#fff; font-size:14px">facebook 아이디로 로그인</span>
            </div>
            </center>
        </div>
      <% end %>
      <%#= link_to "Sign in with kakao", user_omniauth_authorize_path(:kakao), target:"_blank" %>
    <!--</div>-->
      <hr>
      <p style="font-size:14px; margin-top:10px; margin-bottom:0;">아직 회원이 아니신가요?</p>
      <%- if devise_mapping.registerable? %>
        <%= link_to '회원가입', '#', class: 'right btn btn-danger2 modal_btn', data: {toggle: "modal", target: "#sign_up"}%>
      <% end -%>
      
  <% end %>

      </div>
      
    </div>
  </div>
</div>

<script>

$(document).ready(function(){
  $(':checkbox').radiocheck('unchecked');
});
</script>