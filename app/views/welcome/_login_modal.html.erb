<style type="text/css">
  label.autologin {
     line-height:0;
  }
  .modal-dialog.login {
    width:400px;
  }
</style>

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="max-width:400px">
    <div class="modal-content">
    
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 style="margin-top:0px;">로그인</h4>
      </div>
      <div class="modal-body">
       
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    
    <%= devise_error_messages! %>
    <div class="form-group">
      
      <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "이메일" %>
    </div>
    <div class="form-group">
      
      <%= f.password_field :password, class: 'form-control', placeholder: "비밀번호" %>
    </div>
    <div class="row">
      <div class="col-md-5 col-sm-5 col-xs-6">
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="padding-left: 1em;">
            <label class="autologin">
              <%= f.check_box :remember_me %> 자동 로그인
            </label>
          </div>
        <% end -%>
      </div>
      <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-4 col-sm-offset-3 col-xs-5 col-xs-offset-1" style="margin-top:0.2em">
        <%- if devise_mapping.recoverable? %>
            <%= link_to '비밀번호 찾기', '#', :style=>"font-size:0.7em", data: {toggle: "modal", target: "#forgot_pass"}%>
        <% end -%>
      </div>
    </div>
    
    
      <%= f.submit '로그인', :class => 'btn btn-primary', :style=>"width:100%" %>
      
    <div id="naver_id_login">
      <%= link_to user_omniauth_authorize_path(:naver), target:"_blank" do %>
        <img src="/images/icons/naverlogGreen.png" style="height:40px; margin-top:10px"/>
        <!--<div class="row" style="padding:0px">
          <div class="col-md-2 col-sm-2 col-xs-2" style="padding:0px">
            <img src="/images/icons/naverlogshortWhite.png" style="height:40px; margin-left:0px" />
          </div>
          <div class="col-md-10 col-sm-10 col-xs-10" style="padding:0px">
            <span style="font-size:14px">네이버 아이디로 로그인</span>
          </div>
        </div>-->
      <% end %>
    </div>
    
        <p style="font-size:13px; margin-top:15px;">아직 회원이 아니신가요?</p>
      <%- if devise_mapping.registerable? %>
        <%= link_to '회원가입', '#', class: 'right btn btn-info', :style=>"width:100%", data: {toggle: "modal", target: "#sign_up"}%>
      <% end -%>
      
  <% end %>

      </div>
      
    </div>
  </div>
</div>

<script>

$(document).ready(function(){
  $(':checkbox').radiocheck('unchecked');
});
</script>