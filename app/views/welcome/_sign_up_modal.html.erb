<style type="text/css">
  .form-group {
    margin-bottom:10px;
  }
  .modal-header, .modal-body {
    background-color:#f5f5f5;
  }
  
  .modal_btn {
    width:100%;
    border-radius:0;
    margin-top: 10px;
  }
</style>
<div class="modal fade"  id="sign_up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="max-width:400px">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h4 style="text-align:center; margin-top:10px;">&nbsp&nbsp회원가입</h4>
      </div>
      <div class="modal-body">
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "이름" %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: "이메일 ex)abcd@gmail.com" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: "비밀번호" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "비밀번호 확인" %>
            </div>
            <div class="modal-footer" style="padding:0px; border:0;">
            
                 <%= f.submit '회원가입', :class => 'btn btn-success modal_btn' %>
              
            </div>
          <% end %>
       </div>
    </div>
    </div>
</div>