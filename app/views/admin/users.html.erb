<style type="text/css">
    th {text-align: center;}
    td {text-align: center;}
</style>
<div class="container">
<h4>회원 관리</h4>
<p>총 <%= @users.length %>명</p>
	
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">  
    	<div class="table-responsive">
				<table class="table">
					<tr>
						<th>유저 번호</th>
						<th>이름</th>
						<th>휴대폰 번호</th>
						<th>이메일</th>
					</tr>
	<% @users.each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td><%= user.name %></td>
						<td><%= user.username %></td>
						<td><%= user.email %></td>
					</tr>
	<% end %>
				</table>
			</div>
		</div>
	</div>
	
</div><!--콘테이너-->