<head>
   
<style type="text/css">
  @media (max-width: 991px) {
    .navbar-header {
        float: none;
    }
    .navbar-toggle {
        display: block;
    }
    .navbar-collapse {
        border-top: 1px solid transparent;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .navbar-collapse.collapse {
        display: none!important;
    }
    .navbar-nav {
        float: none!important;
        margin: 7.5px -15px;
    }
    .navbar-nav>li {
        float: none;
    }
    .navbar-nav>li>a {
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .navbar-text {
        float: none;
        margin: 15px 0;
    }
    /* since 3.1.0 */
    .navbar-collapse.collapse.in { 
        display: block!important;
    }
    .collapsing {
        overflow: hidden!important;
    }
}
.navbar-collapse .navbar-nav.navbar-right:last-child {
    margin-right:0px;
}
.navbar-default .navbar-nav > li > a {
    color:#3e5771;
}
.navbar-nav > li > a {
    font-family:source-han-sans-korean;
    font-size:15px;
}
.modal-footer {
    background-color:#f5f5f5;
}

</style>
</head>
<% if current_page?('/') %>
    <nav class="navbar navbar-default navbar-fixed-top" style="height:50px; background-color:transparent; border-bottom:transparent">
<% else %>
<!--
    <nav class="navbar navbar-default navbar-fixed-top" style="height:50px; background-image:url('/images/index-images/navimg5.png'); border-bottom:1px solid #BDC3C7">
-->
    <nav class="navbar navbar-default navbar-fixed-top" style="height:50px; background-color:#fff; border-bottom:1px solid #BDC3C7">

<% end %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to '하숙방콕', root_path, class: 'navbar-brand','data-no-turbolink' => true %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        
        <%= render 'layouts/navigation_links' %>
      
      </ul>

          <ul class="nav navbar-nav navbar-right">
                
            <%= render 'layouts/navigation_links2' %>
            
          </ul>

    </div>

</nav>
<script>
$(document).ready(function () {
  $('.dropdown-toggle').dropdown();
    
  $(".navbar-nav li a#close").click(function(event) {
    $(".navbar-collapse").collapse('hide');
  });
  
  if( $("navbar-collapse collapse").hasClass("in") !=true ) {
      $(".navbar-default .navbar-toggle").click(function(){
         $(".navbar-default .navbar-toggle").css("color", "#3e5771");
         $(".navbar-default .navbar-toggle:before").css("color", "#3e5771");
         $(".navbar-default li a").css("color", "#3e5771");
         $(".navbar-default .navbar-brand").css("color", "#3e5771");
         $(".navbar-default").css("background", "#fff");
         $(".navbar-default").css("border-bottom", "1px solid #BDC3C7");
         $(".navbar-collapse.collapse").css("background", "#fff");
      });
    } else {
      $(".navbar-default .navbar-toggle").click(function(){
          $(".navbar-collapse").removeClass("in");
      });
    }
  
});
</script>